{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "VisualEditor0",
            "Effect": "Allow",
            "Action": [
                "iam:GetPolicy",
                "iam:CreatePolicy",
                "iam:GetRole",
                "iam:CreateRole",
                "s3:PutObject",
                "s3:GetObject",
                "iam:ListAttachedRolePolicies",
                "iam:AttachRolePolicy",
                "iam:DetachRolePolicy",
                "s3:PutObjectTagging",
                "iam:GetPolicyVersion",
                "iam:CreatePolicyVersion",
                "iam:DeletePolicyVersion",
                "iam:ListPolicyVersions"
            ],
            "Resource": [
                "arn:aws:iam::*:group/sym-s2-${environmentType}-${environmentId}-*",
                "arn:aws:iam::*:policy/sym-s2-${environmentType}-${environmentId}-*",
                "arn:aws:iam::*:role/sym-s2-${environmentType}-${environmentId}-*",
                "arn:aws:s3:::${awsConfigBucket}/config/sym-s2-${environmentType}-${environmentId}-*"
            ]
        },
        {
            "Sid": "ElbCreate",
            "Effect": "Allow",
            "Action": [
                "elasticloadbalancing:CreateListener",
                "elasticloadbalancing:CreateLoadBalancer",
                "elasticloadbalancing:AddTags"
            ],
            "Resource": "arn:aws:elasticloadbalancing:*:*:loadbalancer/app/*/*"
        },
        {
            "Sid": "ElbWrite",
            "Effect": "Allow",
            "Action": [
                "elasticloadbalancing:CreateTargetGroup",
                "elasticloadbalancing:ModifyRule",
                "elasticloadbalancing:CreateRule",
                "elasticloadbalancing:DeleteRule",
                "elasticloadbalancing:AddTags"
            ],
            "Resource": [
                "arn:aws:elasticloadbalancing:*:*:targetgroup/*/*",
                "arn:aws:elasticloadbalancing:*:*:listener/*/*/*",
                "arn:aws:elasticloadbalancing:*:*:listener-rule/app/*/*/*/*"
            ]
        },
        {
            "Sid": "ElbRead",
            "Effect": "Allow",
            "Action": [
                "elasticloadbalancing:DescribeLoadBalancers",
                "elasticloadbalancing:DescribeListeners",
                "elasticloadbalancing:DescribeTargetHealth",
                "elasticloadbalancing:DescribeTargetGroups",
                "elasticloadbalancing:DescribeRules"
            ],
            "Resource": "*"
        },
        {
            "Sid": "All",
            "Effect": "Allow",
            "Action": [
                "route53:ListResourceRecordSets",
                "route53:ListHostedZonesByName",
                "route53:CreateHostedZone",
                "ecs:ListServices",
                "ecs:DescribeServices",
                "ecs:UpdateService",
                "ecs:CreateService",
                "ecs:ListTaskDefinitions",
                "ecs:DescribeClusters",
                "ecs:CreateCluster",
                "logs:DescribeLogGroups",
                "logs:CreateLogGroup",
                "events:PutTargets",
                "events:PutRule"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Sid": "Events",
            "Effect": "Allow",
            "Action": [
                "events:DescribeRule",
                "events:DeleteRule",
                "events:EnableRule",
                "events:RemoveTargets",
                "events:DisableRule",
                "events:ListTargetsByRule"
            ],
            "Resource": "arn:aws:events:*:*:rule/sym-s2-${environmentType}-${environmentId}-*"
        },
        {
            "Sid": "IAM",
            "Effect": "Allow",
            "Action": [
                "iam:PassRole"
            ],
            "Resource": [
                "arn:aws:iam::*:role/sym-s2-${environmentType}-*"
            ]
        },
        {
            "Sid": "R53Write",
            "Effect": "Allow",
            "Action": [
                "route53:ChangeResourceRecordSets"
            ],
            "Resource": [
                "arn:aws:route53:::hostedzone/*"
            ]
        },
        {
            "Sid": "ECS",
            "Effect": "Allow",
            "Action": [
                "ecs:StartTask",
                "ecs:RunTask"
            ],
            "Resource": [
                "arn:aws:ecs:*:*:task-definition/sym-s2-${environmentType}-${environmentId}-*:*",
                "arn:aws:ecs:*:*:task/sym-s2-${environmentType}-${environmentId}-*"
            ]
        }
    ]
}